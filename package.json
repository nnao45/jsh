{
  "name": "inksh",
  "version": "0.1.0",
  "description": "Next-generation interactive shell built with Ink (React for CLI)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "inksh": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "demo": "tsx demo.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src"
  },
  "keywords": [
    "shell",
    "terminal",
    "cli",
    "ink",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "eslint": "^9.33.0",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "ink": "^6.1.0",
    "inquirer": "^12.9.1",
    "node-pty": "^1.0.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "shelljs": "^0.10.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/shelljs": "^0.8.17",
    "@types/yargs": "^17.0.33"
  }
}
